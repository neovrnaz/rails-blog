<div class="post-cards">
  <% Post.all.each do |post| %>
    <div class="grid">
      <div class="grid-item">
        <div class="card">
          <%= image_tag "desk.jpg", class: "card-image" %>
          <div class="card-content">
            <h1 class="card-title"><%= post.title %></h1>
            <p class="card-body"><%= post.body %></p>
            <%= link_to "Read More", post_path(post), class: "card-button"%>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
